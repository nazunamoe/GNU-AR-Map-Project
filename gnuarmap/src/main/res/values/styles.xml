<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorPrimary">#78909C</item>
        <item name="android:colorPrimaryDark">#607D8B</item>
    </style>

    <style name="AppCompat2" parent="Theme.AppCompat">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorPrimary">#78909C</item>
        <item name="android:colorPrimaryDark">#607D8B</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">monospace</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppCompat2.noActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorPrimary">#78909C</item>
        <item name="android:colorPrimaryDark">#607D8B</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="AlertDialogTheme">
        <item name="android:windowBackground">@color/translucent_black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:colorPrimaryDark">#78909C</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:colorPrimaryDark">#78909C</item>
    </style>

    <style name="PreferenceScreen" parent="Theme.AppCompat">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorPrimary">#78909C</item>
        <item name="android:colorPrimaryDark">#607D8B</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="colorPrimaryDark">#607D8B</item>
        <item name="colorAccent">#78909C</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

</resources>
